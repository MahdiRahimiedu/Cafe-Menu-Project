@model Menu.Site.ViewModels.User.LoginVM


<section class="vh-100" style="background-color: #508bfc;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <h3 class="mb-5">Sign in</h3>
                        <form asp-action="Admin" asp-controller="Home">
                            <div class="form-outline mb-4">
                                <label class="d-block form-label text-start" asp-for="Username"></label>
                                <input asp-for="Username"  id="typeEmailX-2" class="form-control form-control-lg" />
                                <span asp-validation-for="Username" style="font-size: 12px;" class="d-block text-start"></span>
                            </div>

                            <div class="form-outline mb-4">
                                <label class="d-block form-label text-start" asp-for="Pass"></label>
                                <input asp-for="Pass" id="typePasswordX-2" type="password" class="form-control form-control-lg" />
                                <span asp-validation-for="Pass" style="font-size: 12px;" class="d-block text-start"></span>
                            </div>


                            <input class="btn btn-primary btn-lg btn-block" type="submit" value="Login"/>
                        </form>



                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

