@model Menu.Site.Models.Category

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="pb-3">
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2 mt-2">
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>
        <dd class = "col-sm-10 mt-2">
            @ViewBag.DateTime
        </dd>

        <dt class = "col-sm-2 mt-2">
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd class = "col-sm-10 mt-2">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
        <dt class = "col-sm-2 mt-2 d-flex align-items-center">
            @Html.DisplayNameFor(model => model.CategoryImage)
        </dt>
        <dd class = "col-sm-10 mt-2">
            <img style="width: 5rem;" src="~/images/@Model.CategoryImage">
        </dd>
        <dt class = "col-sm-2 mt-2">
            @Html.DisplayNameFor(model => model.Priority)
        </dt>
        <dd class = "col-sm-10 mt-2">
            @Html.DisplayFor(model => model.Priority)
        </dd>
        <dt class = "col-sm-2 mt-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class = "col-sm-10 mt-2">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        
    </dl>
</div>
<div>
    <a class="btn btn-primary px-5" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> 
</div>
