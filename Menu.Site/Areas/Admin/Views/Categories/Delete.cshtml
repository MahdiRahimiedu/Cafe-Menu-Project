@model Menu.Site.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<h1 class="fs-2">Delete</h1>

<h3 class="fs-4">Are you sure you want to delete this?</h3>
<div class="pb-3">
    <h4 class="fs-4">Category</h4>
    <hr />
    <dl class="row pb-3" >
         <dt class = "col-sm-2 mt-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10 mt-2">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
        <dt class = "col-sm-2 mt-2 d-flex align-items-center">
            @Html.DisplayNameFor(model => model.CategoryImage)
        </dt>
        <dd class = "col-sm-10 mt-2">
            <img class="rounded-3" style="width: 5rem;" src="~/images/@Model.CategoryImage">
        </dd>
        <dt class = "col-sm-2 mt-2">
            @Html.DisplayNameFor(model => model.Priority)
        </dt>
        <dd class = "col-sm-10 mt-2">
            @Html.DisplayFor(model => model.Priority)
        </dd>
        <dt class = "col-sm-2 mt-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class = "col-sm-10 mt-2">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
       
    </dl>
    
    <form asp-action="Delete">
        <input asp-for="Id" type="hidden" />
        <input asp-for="CategoryImage" type="hidden" />
        <input type="submit" value="Delete" class="btn px-5 btn-danger" />
    </form>
</div>
